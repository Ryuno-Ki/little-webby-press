<?xml version="1.0" encoding="UTF-8"?>
<ncx xmlns="http://www.daisy.org/z3986/2005/ncx/" version="2005-1">
  <head>
    <meta name="dtb:uid" content="{{book.config.metadata.identifier}}"/>
    <meta name="dtb:depth" content="1"/>
    <meta name="dtb:totalPageCount" content="0"/>
    <meta name="dtb:maxPageNumber" content="0"/>
  </head>
  <docTitle>
    <text>{{book.config.metadata.title}}</text>
  </docTitle>
  <navMap>
    <navPoint id="cover" playOrder="1">
      <navLabel>
        <text>Title Page</text>
      </navLabel>
      <content src="cover.xhtml"/>
    </navPoint>
    <navPoint id="toc" playOrder="2">
      <navLabel>
        <text>Table of Contents</text>
      </navLabel>
      <content src="toc.xhtml"/>
    </navPoint>
    {{#each spine}}
    <navPoint id="{{this}}" playOrder="{{tocIndex @index}}">
      <navLabel>
        <text>{{chapterTitle this}}</text>
      </navLabel>
      <content src="{{this}}.xhtml"/>
    </navPoint>
    {{/each}}
  </navMap>
</ncx>
